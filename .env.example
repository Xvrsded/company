# CMS provider: generic | contentful | strapi | sanity
CMS_PROVIDER=generic

# Generic CMS endpoint returning JSON in CompanyContent shape
NEXT_PUBLIC_CMS_ENDPOINT=
CMS_ACCESS_TOKEN=

# Contentful settings (used when CMS_PROVIDER=contentful)
CONTENTFUL_SPACE_ID=
CONTENTFUL_ENVIRONMENT=master
CONTENTFUL_ENTRY_ID=
CONTENTFUL_ACCESS_TOKEN=

# Strapi settings (used when CMS_PROVIDER=strapi)
STRAPI_URL=
STRAPI_COLLECTION=company-content
STRAPI_TOKEN=

# Sanity settings (used when CMS_PROVIDER=sanity)
SANITY_PROJECT_ID=
SANITY_DATASET=production
SANITY_API_VERSION=2025-02-01
SANITY_READ_TOKEN=
# Optional custom GROQ query that must return CompanyContent shape
SANITY_QUERY=

# Lead capture webhook (Zapier/Make/HubSpot custom webhook/CRM endpoint)
CONTACT_WEBHOOK_URL=
CONTACT_WEBHOOK_TOKEN=

# HubSpot Forms API integration
HUBSPOT_PORTAL_ID=
HUBSPOT_FORM_ID=
HUBSPOT_PRIVATE_APP_TOKEN=

# Resend email notification
RESEND_API_KEY=
RESEND_FROM=
RESEND_TO=

# PostHog analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Public site URL used by integrations
NEXT_PUBLIC_SITE_URL=http://localhost:3000
